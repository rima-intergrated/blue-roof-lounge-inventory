# Database Configuration
MONGODB_URI=mongodb://localhost:27017/blue_roof_lounge
MONGODB_URI_TEST=mongodb://localhost:27017/blue_roof_lounge_test

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=change_this_super_secret_jwt_key_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=change_this_refresh_token_secret_in_production
JWT_REFRESH_EXPIRES_IN=30d

# Password Security
BCRYPT_SALT_ROUNDS=12

# Session Configuration - CHANGE THIS IN PRODUCTION!
SESSION_SECRET=change_this_session_secret_in_production
SESSION_NAME=blue_roof_session

# Email Configuration (Optional - for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_or_app_password
EMAIL_FROM=Blue Roof Lounge <noreply@bluerooflounge.com>

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cloudinary Configuration (Optional - for cloud storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Application Settings
DEFAULT_ADMIN_EMAIL=admin@bluerooflounge.com
DEFAULT_ADMIN_PASSWORD=BlueRoof2024!
COMPANY_NAME=Blue Roof Lounge
COMPANY_EMAIL=info@bluerooflounge.com
COMPANY_PHONE=+254700000000

# Pagination Settings
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Security Settings
CORS_ORIGIN=http://localhost:3000
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_LOGGING=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# Third Party API Keys (Optional)
SMS_API_KEY=your_sms_api_key_here
SMS_API_URL=https://api.sms-provider.com/v1/send
PAYMENT_GATEWAY_KEY=your_payment_gateway_key_here
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret_here

# Monitoring and Analytics (Optional)
ENABLE_PERFORMANCE_MONITORING=true
ANALYTICS_KEY=your_analytics_key_here

# Development Settings
DEBUG=false
VERBOSE_LOGGING=false
